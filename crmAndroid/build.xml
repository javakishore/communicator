<?xml version="1.0" ?>
<project name="crmAndroid" default="war">
	<path id="compile.classpath">
		<fileset dir="WebContent/WEB-INF/lib">
			<include name="*.jar" />
		</fileset>
	</path>

	<target name="init" depends="clean">
		<mkdir dir="build/classes" />
	</target>

	<target name="compile" depends="init">
		<javac destdir="build/classes" debug="true" srcdir="src" executable="${javac1.7}" includeantruntime="false">
			<classpath refid="compile.classpath" />
		</javac>
	</target>
	<target name="copy">
		<copy todir="classes/resources">
			<fileset dir="src/resources"/>				
		</copy>
	</target>
	<target name="war" depends="compile,copy">
		<war destfile="crmAndroid.war" webxml="WebContent/WEB-INF/web.xml">
			<fileset dir="WebContent" />
			<classes dir="build/classes"/>
			<zipfileset dir="src/resources" prefix="WEB-INF/classes/resources" />
			<zipfileset dir="src" prefix="WEB-INF/classes/">
				<include name="*.properties"/>
				<include name="*.xml"/>
			</zipfileset>
		</war>
	</target>

	<target name="clean">
		<delete dir="build" />
	</target>

</project>